{
  "name": "ocean-adventure",
  "version": "0.1.0",
  "description": "A 3D browser-based underwater platform game where players swim through oceanic environments collecting stars",
  "main": "src/main.js",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "vitest run",
    "test:unit": "vitest run --reporter=verbose tests/unit",
    "test:integration": "vitest run --reporter=verbose tests/integration",
    "test:e2e": "playwright test",
    "test:e2e:fallback": "node scripts/test-fallback.js",
    "test:mobile": "playwright test --project=mobile",
    "test:mobile:fallback": "node scripts/test-fallback.js",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "validate:github-pages": "./scripts/validate-github-pages.sh",
    "lint": "npx eslint src/ --ext .js,.ts",
    "lint:fix": "npx eslint src/ --ext .js,.ts --fix",
    "format": "npx prettier --write src/",
    "format:check": "npx prettier --check src/",
    "type-check": "npx tsc --noEmit",
    "analyze": "npm run build && vite-bundle-analyzer dist/stats.html",
    "analyze:bundle": "npm run build && echo 'Bundle analysis: Check dist/ directory for generated files. Bundle size details available in build output above.'",
    "perf:test": "lighthouse http://localhost:3000 --output=json --output-path=./perf-results.json",
    "perf:memory": "node --expose-gc scripts/memory-test.js",
    "docs:serve": "vitepress dev docs",
    "docs:build": "vitepress build docs"
  },
  "keywords": [
    "game",
    "3d",
    "webgl",
    "threejs",
    "underwater",
    "platform",
    "browser-game",
    "mobile",
    "ocean",
    "adventure"
  ],
  "author": "Ocean Adventure Contributors",
  "license": "GPL-3.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/commjoen/3dgame.git"
  },
  "bugs": {
    "url": "https://github.com/commjoen/3dgame/issues"
  },
  "homepage": "https://commjoen.github.io/3dgame",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "stats.js": "^0.17.0",
    "three": "^0.179.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@playwright/test": "^1.55.0",
    "@types/three": "^0.179.0",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.39.1",
    "@vitejs/plugin-legacy": "^7.2.1",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.0.0",
    "js-yaml": "^4.1.0",
    "jsdom": "^26.1.0",
    "lighthouse": "^12.8.1",
    "prettier": "^3.0.0",
    "typescript": "^5.2.0",
    "vite": "^7.1.2",
    "vite-plugin-pwa": "^1.0.3",
    "vitest": "^3.2.4",
    "webpack-bundle-analyzer": "^4.9.0"
  },
  "browserslist": [
    "chrome >= 80",
    "firefox >= 75",
    "safari >= 13",
    "edge >= 80",
    "ios_saf >= 13"
  ]
}
