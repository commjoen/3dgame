{
  "name": "ocean-adventure",
  "version": "0.1.0",
  "description": "A 3D browser-based underwater platform game where players swim through oceanic environments collecting stars",
  "main": "src/main.js",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "vitest run",
    "test:unit": "vitest run --reporter=verbose tests/unit",
    "test:integration": "vitest run --reporter=verbose tests/integration",
    "test:e2e": "playwright test",
    "test:mobile": "playwright test --project=mobile",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "./node_modules/.bin/eslint src/ --ext .js,.ts",
    "lint:fix": "./node_modules/.bin/eslint src/ --ext .js,.ts --fix",
    "format": "./node_modules/.bin/prettier --write src/",
    "format:check": "./node_modules/.bin/prettier --check src/",
    "type-check": "./node_modules/.bin/tsc --noEmit",
    "analyze": "npm run build && vite-bundle-analyzer dist/stats.html",
    "analyze:bundle": "webpack-bundle-analyzer dist/stats.json",
    "perf:test": "lighthouse http://localhost:3000 --output=json --output-path=./perf-results.json",
    "perf:memory": "node --expose-gc scripts/memory-test.js",
    "docs:serve": "vitepress dev docs",
    "docs:build": "vitepress build docs"
  },
  "keywords": [
    "game",
    "3d",
    "webgl",
    "threejs",
    "underwater",
    "platform",
    "browser-game",
    "mobile",
    "ocean",
    "adventure"
  ],
  "author": "Ocean Adventure Contributors",
  "license": "GPL-3.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/commjoen/3dgame.git"
  },
  "bugs": {
    "url": "https://github.com/commjoen/3dgame/issues"
  },
  "homepage": "https://commjoen.github.io/3dgame",
  "engines": {
    "node": ">=24.0.0",
    "npm": ">=10.0.0"
  },
  "dependencies": {
    "stats.js": "^0.17.0",
    "three": "^0.158.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/three": "^0.158.0",
    "@typescript-eslint/eslint-plugin": "^8.39.1",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-legacy": "^4.1.0",
    "@vitest/coverage-v8": "^0.34.0",
    "@vitest/ui": "^0.34.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jsdom": "^26.1.0",
    "lighthouse": "^11.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.2.0",
    "vite": "^7.1.2",
    "vite-plugin-pwa": "^0.16.0",
    "vitest": "^0.34.0",
    "webpack-bundle-analyzer": "^4.9.0"
  },
  "browserslist": [
    "chrome >= 80",
    "firefox >= 75",
    "safari >= 13",
    "edge >= 80",
    "ios_saf >= 13"
  ]
}
